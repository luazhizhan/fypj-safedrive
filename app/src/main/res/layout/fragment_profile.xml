<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp"
    tools:context=".fragment.ProfileFragment">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/primary_dark" />

    <ImageView
        android:id="@+id/profileImageProfileImageView"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_user_profile" />

    <TextView
        android:id="@+id/profileUserNameTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileImageProfileImageView"
        android:layout_centerHorizontal="true"
        android:text="John"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profileCurrentSafetyIndexTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileUserNameTxtView"
        android:layout_centerHorizontal="true"
        android:text="87 (Band 1)"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/trip_safety_index_band_1"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profileEditProfileTxtView"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@color/primary_dark"
        android:paddingTop="25dp"
        android:text="Edit Profile"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/imageView5"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageView8" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/profileEditProfileTxtView"
        android:background="@color/primary_dark"
        android:src="@mipmap/ic_edit_user_profile" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@color/primary_dark"
        android:src="@mipmap/ic_settings_profile"
        android:layout_alignTop="@+id/profileSettingsTxtView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/profileSettingsTxtView"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@color/primary_dark"
        android:paddingTop="25dp"
        android:text="Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/profileEditProfileTxtView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imageView10" />

</RelativeLayout>
