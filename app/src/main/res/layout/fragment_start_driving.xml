<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="75dp"
    android:orientation="vertical"
    tools:context=".fragment.StartDrivingFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="1dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/startDrivingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/primary_dark"
                android:text="Start Driving" />

            <TextView
                android:id="@+id/startDrivingSafetyIndexTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/primary"
                android:text="Not Available"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp"
                android:textStyle="bold" />
            <!-- First row of panels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="100">

                <!-- Speed card -->
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="165dp"
                    android:layout_weight="48"
                    android:backgroundTint="@color/primary"
                    card_view:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/startDrivingSpeedImageView"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/ic_start_driving_speedometer" />

                        <TextView
                            android:id="@+id/speedLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/startDrivingSpeedImageView"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:text="Speed"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/startDrivingSpeedTxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/speedLabel"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="0km/h"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <!-- Gap -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4" />

                <!-- Distance card -->
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="165dp"
                    android:layout_weight="48"
                    android:backgroundTint="@color/primary"
                    card_view:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/startDrivingDistImageView"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/ic_start_driving_distance" />

                        <TextView
                            android:id="@+id/distanceLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/startDrivingDistImageView"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:text="Distance"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/startDrivingDistTxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/distanceLabel"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="0m"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
            <!-- Second row of panels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="100">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="165dp"
                    android:layout_gravity="center"
                    android:layout_weight="48"
                    android:backgroundTint="@color/primary"
                    card_view:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/startDrivingSpeedingImageView"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/ic_start_driving_speeding" />

                        <TextView
                            android:id="@+id/speedingLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/startDrivingSpeedingImageView"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:text="Speeding"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/startDrivingSpeedingTxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/speedingLabel"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="0 counts"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <!-- Gap -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4" />

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="165dp"
                    android:layout_gravity="center"
                    android:layout_weight="48"
                    android:backgroundTint="@color/primary"
                    card_view:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/startDrivingSharpTurnImageView"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/ic_start_driving_sharp_turn" />

                        <TextView
                            android:id="@+id/sharpTurnsLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/startDrivingSharpTurnImageView"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:text="Sharp turns"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/startDrivingSharpTurnTxtView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/sharpTurnsLabel"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="0 counts"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="30dp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <Button
                android:visibility="gone"
                android:id="@+id/startDrivingAccidentBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/trip_safety_index_band_4"
                android:text="Accident" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
