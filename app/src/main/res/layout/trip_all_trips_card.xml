<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/nav_row_ripple"
        android:clickable="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#00BFA5"
            android:src="@mipmap/ic_trip_display" />

        <TextView
            android:id="@+id/tripsDateCreatedTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:text="23 Jun 2016 5:39PM"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tripsDateCreatedTxtView"
            android:layout_alignStart="@+id/tripsDateCreatedTxtView"
            android:layout_centerVertical="true"
            android:text="Safety Index: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tripsSafetyTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/trip_incentive"
            android:textStyle="bold"
            android:layout_above="@+id/tripBendingIndexTxtView"
            android:layout_toEndOf="@+id/textView5" />

        <TextView
            android:id="@+id/tripBendingIndexTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Band 1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/trip_penalty"
            android:textStyle="bold"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />

    </RelativeLayout>

</android.support.v7.widget.CardView>