<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/tripSafetyIndexScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Trip's Safety Index"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/tripSafetyIndexSafetyIndexTxtView"
                android:text="80 (Band 1)"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/trip_safety_index_band_1"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/primary_dark"
                android:paddingLeft="8dp"
                android:text="Base Safety Index"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_dark"
                android:paddingLeft="8dp"
                android:id="@+id/tripSafetyIndexBaseIndexTxtView"
                android:text="100"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tripSafetyIndexDDistanceTxtView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/primary_dark"
                android:paddingLeft="8dp"
                android:text="Distance Risk (500m)"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tripSafetyIndexDistanceTxtView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_dark"
                android:paddingLeft="8dp"
                android:text="(5)"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tripSafetyIndexDAvgSpeedTxtView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/primary_dark"
                android:paddingLeft="8dp"
                android:text="Average Speed Risk (69km/h)"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tripSafetyIndexAvgSpeedTxtView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_dark"
                android:paddingLeft="8dp"
                android:text="(5)"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tripSafetyIndexDSpeedingTxtView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/primary_dark"
                android:paddingLeft="8dp"
                android:text="Speeding Risk (2 Count)"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tripSafetyIndexSpeedingTxtView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_dark"
                android:paddingLeft="8dp"
                android:text="(5)"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tripSafetyIndexDSharpTurnTxtView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/primary_dark"
                android:paddingLeft="8dp"
                android:text="Sharp Turn Risk (2 Count)"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tripSafetyIndexSharpTurnTxtView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_dark"
                android:paddingLeft="8dp"
                android:text="(5)"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="35sp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="8dp"
                android:text="Equal: "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tripSafetyIndexResultTxtView"
                android:paddingLeft="8dp"
                android:text="80 (Band 1)"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="35sp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>